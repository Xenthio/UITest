  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\UITest.Core\UITest.Core.csproj" />
    <ProjectReference Include="..\..\src\UITest.Build\UITest.Build.csproj" />
  </ItemGroup>

